<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>            <!-- 这里和下面的servlet-name匹配且不与其他servlet映射重复即可-->
        <servlet-class>com.demo.web.servlet.LoginServlet</servlet-class>  <!-- 这里写servlet的包名.类名-->
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>             <!--这里写/类名即可-->
    </servlet-mapping>
</web-app>